{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["app/*"],
      "@containers/*": ["src/containers/*"],
      "@components/*": ["src/components/*"],
      "@modules/*": ["src/modules/*"],
      "@styles/*": ["src/styles/*"],
      "tests": ["tests/*"]
    },
    "removeComments": true,
    "skipLibCheck": false,
    "strict": true,
    "target": "esnext"
  },
  "include": ["./src", "**/*.ts", "**/*.js", "./**/*", "./*", ".eslintrc.js"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "__tests__/**/*-test.ts"],
  "extends": "expo/tsconfig.base"
}
